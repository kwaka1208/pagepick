{
  "manifest_version": 3,
  "name": "PagePick",
  "version": "1.1.0",
  "description": "ページ情報取得・表示ツール：URL+タイトルコピー（複数形式対応）、OGP画像表示",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PagePick"
  }
}