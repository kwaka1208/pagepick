{
  "manifest_version": 3,
  "name": "PagePick",
  "version": "1.0.0",
  "description": "ページ情報取得・表示ツール：URL+タイトルコピー（複数形式対応）、OGP画像表示",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PagePick"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ]
}
